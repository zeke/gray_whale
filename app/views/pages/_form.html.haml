- form_for(page) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :tagline
    %br
    = f.text_area :tagline
  %p
    = f.label :body
    %br
    = f.text_area :body
  %p
    = f.label :position
    %br
    = f.text_field :position
  %p
    = f.submit "Submit"